{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      {
        "src": "^/(dashboard|analytics|posts|schedule|settings|profile)",
        "dest": "/public/dashboard.html"
      },
      {
        "src": "^/signup",
        "dest": "/public/signup.html"
      },
      {
        "src": "^/login",
        "dest": "/public/login.html"
      },
      {
        "src": "^/$",
        "dest": "/public/index.html"
      },
      {
        "src": "/.*",
        "dest": "/public/404.html"
      }
    ]
  }