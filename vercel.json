{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://testi-gilt.vercel.app",
        "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/webhook",
      "dest": "server.js",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/auth",
      "dest": "public/auth.html"
    },
    {
      "src": "/dashboard",
      "dest": "public/dashboard.html"
    },
    {
      "src": "/(.+\\.(?:js|css|png|jpg|gif|svg|ico))",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
} 