{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/auth",
      "dest": "public/auth.html"
    },
    {
      "src": "/dashboard",
      "dest": "public/dashboard.html"
    },
    {
      "src": "/(.+\\.(?:js|css|png|jpg|gif|svg|ico))",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
} 