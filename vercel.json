{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/dashboard",
            "dest": "public/dashboard.html"
        },
        {
            "src": "/auth",
            "dest": "public/auth.html"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ]
}