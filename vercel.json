{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/success",
      "dest": "public/success.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
} 