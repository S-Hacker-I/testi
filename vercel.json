{
    "version": 2,
    "builds": [
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/config",
            "dest": "/api/config.js"
        },
        {
            "src": "/webhook",
            "dest": "/api/webhook.js"
        },
        {
            "src": "/dashboard",
            "dest": "/public/dashboard.html"
        },
        {
            "src": "/auth",
            "dest": "/public/auth.html"
        },
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/(.+\\.(js|css|png|jpg|gif|svg|ico)$)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}